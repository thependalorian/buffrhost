{
  "name": "buffr-host-backend",
  "version": "1.0.0",
  "description": "Buffr Host TypeScript Backend API - Vercel Optimized",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "vercel-build": "tsc && cp -r src/entities dist/entities && cp -r src/middleware dist/middleware && cp -r src/routes dist/routes && cp -r src/config dist/config && cp -r src/database dist/database && cp -r src/utils dist/utils"
  },
  "dependencies": {
    "next": "^14.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.0",
    "pg": "^8.11.0",
    "typeorm": "^0.3.17",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.0",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.0",
    "stripe": "^14.0.0",
    "axios": "^1.6.0",
    "multer": "^1.4.4-lts.1",
    "sharp": "^0.33.0",
    "joi": "^17.11.0",
    "express": "^4.18.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hospitality",
    "management",
    "api",
    "typescript",
    "nextjs",
    "vercel",
    "buffr-host"
  ],
  "author": "Buffr Team",
  "license": "MIT"
}
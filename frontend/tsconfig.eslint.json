{
  "extends": "./tsconfig.json",
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "__mocks__/**/*.js",
    "__tests__/**/*.js",
    "e2e/**/*.ts",
    "playwright.config.ts",
    "jest.config.js",
    "jest.setup.js",
    "eslint.config.js",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    "test-results",
    "playwright-report"
  ]
}

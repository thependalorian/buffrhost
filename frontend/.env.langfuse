# Langfuse Frontend Configuration for The Shandi
# Add these variables to your frontend .env files

# =============================================================================
# LANGFUSE FRONTEND CONFIGURATION
# =============================================================================
# Langfuse Public Keys (Safe for client-side)
NEXT_PUBLIC_LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
NEXT_PUBLIC_LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
NEXT_PUBLIC_LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# AI Service API endpoints
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8012
NEXT_PUBLIC_CONVERSATION_API_URL=http://localhost:8012/api/ai/conversation
NEXT_PUBLIC_RECOMMENDATIONS_API_URL=http://localhost:8012/api/ai/recommendations
NEXT_PUBLIC_ANALYTICS_API_URL=http://localhost:8012/api/ai/analytics

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable Langfuse observability features
NEXT_PUBLIC_ENABLE_LANGFUSE_OBSERVABILITY=true
NEXT_PUBLIC_ENABLE_AI_CONVERSATIONS=true
NEXT_PUBLIC_ENABLE_AI_RECOMMENDATIONS=true
NEXT_PUBLIC_ENABLE_AI_ANALYTICS=true

# =============================================================================
# DEBUGGING AND DEVELOPMENT
# =============================================================================
# Langfuse debugging
NEXT_PUBLIC_LANGFUSE_DEBUG=true
NEXT_PUBLIC_LANGFUSE_LOG_LEVEL=info

# AI Service debugging
NEXT_PUBLIC_AI_DEBUG=true
NEXT_PUBLIC_AI_LOG_LEVEL=info

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="The Shandi"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# SESSION AND USER MANAGEMENT
# =============================================================================
# Session configuration
NEXT_PUBLIC_SESSION_TIMEOUT=3600000
NEXT_PUBLIC_MAX_CONVERSATION_HISTORY=50

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# AI response caching
NEXT_PUBLIC_AI_CACHE_ENABLED=true
NEXT_PUBLIC_AI_CACHE_TTL=300000

# Request timeouts
NEXT_PUBLIC_AI_REQUEST_TIMEOUT=30000
NEXT_PUBLIC_API_REQUEST_TIMEOUT=10000
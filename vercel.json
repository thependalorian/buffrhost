{
  "version": 2,
  "name": "buffr-host-api",
  "builds": [
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "backend/src/main.ts"
    },
    {
      "src": "/health",
      "dest": "backend/src/main.ts"
    },
    {
      "src": "/",
      "dest": "backend/src/main.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "functions": {
    "backend/src/main.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs"
}
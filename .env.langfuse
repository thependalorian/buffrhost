# Langfuse Configuration for The Shandi Microservices
# Add these variables to your .env files

# =============================================================================
# LANGFUSE CONFIGURATION
# =============================================================================
# Langfuse API Keys (Get from https://cloud.langfuse.com)
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com
# LANGFUSE_HOST=https://us.cloud.langfuse.com  # US region
# LANGFUSE_HOST=http://localhost:3000  # Self-hosted

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# OpenAI Configuration (Required for AI services)
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Google AI Configuration (Optional)
GOOGLE_AI_API_KEY=your-google-ai-key-here

# =============================================================================
# FRONTEND LANGFUSE CONFIGURATION
# =============================================================================
# Frontend Langfuse Keys (Public keys for client-side)
NEXT_PUBLIC_LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
NEXT_PUBLIC_LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
NEXT_PUBLIC_LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================
# AI Service Configuration
AI_SERVICE_PORT=8012
AI_SERVICE_DATABASE_URL=postgresql://user:password@localhost/buffr_host_ai

# Analytics Service Configuration
ANALYTICS_SERVICE_PORT=8011
ANALYTICS_SERVICE_DATABASE_URL=postgresql://user:password@localhost/buffr_host_analytics

# Communication Service Configuration
COMMUNICATION_SERVICE_PORT=8013
COMMUNICATION_SERVICE_DATABASE_URL=postgresql://user:password@localhost/buffr_host_communications

# Content Service Configuration
CONTENT_SERVICE_PORT=8014
CONTENT_SERVICE_DATABASE_URL=postgresql://user:password@localhost/buffr_host_content

# =============================================================================
# REDIS CONFIGURATION (For Langfuse caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# JWT CONFIGURATION (For service authentication)
# =============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info